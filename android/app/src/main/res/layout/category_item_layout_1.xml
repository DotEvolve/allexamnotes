<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@drawable/rounder_textview"
            android:gravity="center"
            android:textColor="@color/md_white_1000"
            android:text="H"
            android:id="@+id/categoryFirstLetter" />

        <TextView
            android:layout_toEndOf="@id/categoryFirstLetter"
            android:id="@+id/category_title"
            android:padding="15dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:text="Category Sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/category_count"
            android:layout_toStartOf="@id/chev"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/chev"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/vl2_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/dividerColor"/>



</LinearLayout>